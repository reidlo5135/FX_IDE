<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ide.fx_ide.controller.root.RootSceneController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <children>
       <Button fx:id="btn_select" id="btn_select" onAction="#onSelectButtonClick" layoutX="500" layoutY="290">
           <graphic>
               <ImageView fitWidth="80" fitHeight="82" pickOnBounds="true" preserveRatio="true" >
                   <image>
                       <Image url="@../image/folder.png"/>
                   </image>
               </ImageView>
           </graphic>
       </Button>
       <Label fx:id="label_select" id="label_select" layoutX="480" layoutY="390" />

       <Button fx:id="btn_new" id="btn_new" onAction="#onNewButtonClick" layoutX="680" layoutY="290">
           <graphic>
               <ImageView fitWidth="80" fitHeight="82" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../image/java.png"/>
                   </image>
               </ImageView>
           </graphic>
       </Button>
       <Label fx:id="label_new" id="label_new" layoutX="640" layoutY="390" />
   </children>
</AnchorPane>
