<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ide.fx_ide.controller.edit.EditorController" prefWidth="485" prefHeight="380">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <children>
        <MenuBar fx:id="mb_top" id="mb_top" prefWidth="1580" prefHeight="30" />
        <TextArea fx:id="ta_code" id="ta_code" layoutX="380" layoutY="30" prefWidth="1300" prefHeight="500" />
        <Button fx:id="btn_compile" onAction="#onCompileButtonClick" id="btn_compile" layoutX="1580">
            <graphic>
                <ImageView fitWidth="20.0" fitHeight="21.0" pickOnBounds="true" preserveRatio="true" >
                    <image>
                        <Image url="@static/image/compile.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <TextArea fx:id="ta_result" id="ta_result" layoutY="530" prefWidth="1680" prefHeight="340"/>
    </children>
</AnchorPane>
